{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": ["src/**/*.ts", "test/**/*.ts"],

  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "types": ["vitest/globals", "node"],

    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",

    "strict": true,
    "sourceMap": true,

    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  }
}
